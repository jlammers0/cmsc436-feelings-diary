<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.feelings_diary">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/feelings_diary_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/feelings_diary_icon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.example.feelings_diary.LoginActivity"
            android:screenOrientation="portrait"/>
        <activity android:name="com.example.feelings_diary.RegistrationActivity"
            android:screenOrientation="portrait"/>
        <activity android:name="com.example.feelings_diary.PatientHomeActivity"
            android:screenOrientation="portrait"/>
        <activity android:name="com.example.feelings_diary.TherapistHomeActivity"
            android:screenOrientation="portrait"/>
        <activity android:name="com.example.feelings_diary.MailInboxActivity"
            android:screenOrientation="portrait"/>
        <activity android:name="com.example.feelings_diary.MailMessageActivity"
            android:screenOrientation="portrait"/>
        <activity android:name="com.example.feelings_diary.MailReplyActivity"
            android:noHistory="true"
            android:screenOrientation="portrait"/>
        <activity android:name="com.example.feelings_diary.NewMessageActivity"
            android:noHistory="true"
            android:screenOrientation="portrait"/>
        <activity android:name="com.example.feelings_diary.CheckInActivity"
            android:noHistory="true"
            android:screenOrientation="portrait"/>
        <activity android:name="com.example.feelings_diary.CheckInListActivity"
            android:noHistory="true"
            android:screenOrientation="portrait"/>
        <activity android:name="com.example.feelings_diary.TCICommentActivity"
            android:noHistory="true"
            android:screenOrientation="portrait"/>
    </application>

</manifest>